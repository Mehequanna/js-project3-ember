<!-- Linked to question.hbs -->
<div class="question-pages text-center">
  <h3>{{question.questionContent}}</h3>
  <p>{{question.questionNotes}}</p>
  <p>{{question.questionAuthor}}</p>

  {{edit-question question=question editQuestion="editQuestion"}}

</div>

<div class="answer-blocks">
  {{#each question.answers as |answer|}}
    {{answer.answerAuthor}}
  {{/each}}
</div>
