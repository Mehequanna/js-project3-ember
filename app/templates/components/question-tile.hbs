<!-- Links to index.hbs -->
<div class="question-blocks text-center">
  {{#link-to 'question' question.id}}
    {{questionsFull}}
  {{/link-to}}

  {{#if favoriteClicked}}
    <p>Favorited!</p>
  {{else}}
    <button class="btn btn-xs btn-info" {{action 'addToFaves' question}}><span class="glyphicon glyphicon-star"></span></button>
  {{/if}}
</div>
