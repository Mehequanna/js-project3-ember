{{#if addNewAnswer}}
<h1>New Answer</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="answerContent">Answer</label>
        {{input value=answerContent id="answerContent"}}
      </div>
      <div class="form-group">
        <label for="answerAuthor">Username</label>
        {{input value=answerAuthor id="answerAuthor"}}
      </div>
      <button {{action 'saveAnswer'}} class="btn btn-sm btn-success">Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}} class="btn btn-lg btn-info">New Answer</button>
{{/if}}
